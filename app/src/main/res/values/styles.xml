<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/dimwhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="textBody.Small" parent="textBody">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textBody.VerySmall" parent="textBody">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="textBody.Large" parent="textBody">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textBody.medium" parent="textBody">
        <item name="android:textSize">18sp</item>
    </style>



    <style name="textHeading" parent="textBody">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="fontFamily">@font/asap</item>
    </style>
    <style name="textHeading.medium" parent="textHeading">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textHeading.Small" parent="textHeading">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textHeading.VerySmall" parent="textHeading">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textHeading.Large" parent="textHeading">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="textHeading.VeryLarge" parent="textHeading">
        <item name="android:textSize">26sp</item>
    </style>


    <style name="btn" parent="Widget.Material3.Button">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="iconTint">#fff  </item>
    </style>
    <style name="btn.txtbtn" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="btn.outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="textApp" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">?fontFamily</item>
        <item name="android:textColor">@color/selected_text</item>
    </style>

</resources>